if gui_get_mouse_in_hud()=1 {
 if _infoY&lt;0 _infoY+=4;
 }
 else if _infoY&gt;-32 _infoY-=4;
 
xx=-sprite_get_height(spr_hud_info)*(_hudOffset);
yy=_infoY-sprite_get_height(spr_hud_info)*(_hudOffset);

alp=clamp(_infoA/50,sett_get_value("Info Box Opacity")/100,1);
 
draw_sprite(spr_hud_info,0,xx,yy);
draw_sprite_ext(spr_hud_info,1,xx,yy,1,1,0,c_white,alp);
 
//Draw messages:
draw_set_halign(fa_left);
draw_set_valign(fa_top);

for (i=8; i&gt;=1; i-=1) begin

 draw_set_colour(_infoMsg[9-i+_infoScroll,1]);
 draw_set_alpha(_infoA/50);
 draw_text(xx+18,yy+32+(i-1)*12,_infoMsg[9-i+_infoScroll,0]);

end;

draw_set_alpha(1);

//Draw buttons:
if _infoY&gt;-32 {

 if gui_draw_sprite_clickable(spr_hud_info_buttons,0,xx+2,yy+32,true)=true
 or mouse_wheel_up()=true {
  _infoScroll=clamp(_infoScroll+1,0,56);
  _infoA=GUI.max_alp;
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_buttons,1,xx+2,yy+53,true)=true
 or mouse_wheel_down()=true {
  _infoScroll=clamp(_infoScroll-1,0,56);
  _infoA=GUI.max_alp;
  }

 if gui_draw_sprite_clickable(spr_hud_info_buttons,2,xx+2,yy+74,true)=true {
  _infoScroll=0;
  _infoA=GUI.max_alp;
  }

  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,0,xx+3,yy+3,true)=true {
  //Pause menu
  instance_create(x,y,obj_gui_pause);
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,1,xx+32,yy+3,true)=true {
  //Save
  //gui_show_message("Can't save right now.",c_maroon,true);
  //game_save_checkpoint();
  //gui_show_message_ext("Game saved (Slot "+string(global.game_slot)+").",c_black);
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,2,xx+57,yy+3,true)=true {
  //Load
  //gui_show_message("Can't load right now.",c_maroon,true);
  //game_load_checkpoint(get_integer("Input slot to load:",1));
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,3,xx+86,yy+3,true)=true {
  //Inventory
  instance_create(x,y,obj_gui_inventory);
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,4,xx+111,yy+3,true)=true {
  //Journal
  instance_create(x,y,obj_gui_journal);
  }
  
 if gui_draw_sprite_clickable(spr_hud_info_big_buttons,5,xx+136,yy+3,true)=true {
  //Crafting
  instance_create(x,y,obj_gui_crafting);
  }
  
 }

